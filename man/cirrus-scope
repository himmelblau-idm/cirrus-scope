#!/bin/bash

# Replace --version with version
args=()
for arg in "$@"; do
  if [[ "$arg" == "--version" ]]; then
    #args+=("version")
    ../target/debug/cirrus-scope version
    exit
  else
    args+=("$arg")
  fi
done

# Call the command with modified arguments
../target/debug/cirrus-scope "${args[@]}"
